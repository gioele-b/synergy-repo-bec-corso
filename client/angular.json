{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "analytics": false,
    "cache": {
      "enabled": true,
      "path": ".cache",
      "environment": "all"
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "changeDetection": "OnPush",
      "style": "scss",
      "skipTests": true,
      "inlineStyle": false,
      "inlineTemplate": false,
      "viewEncapsulation": "Emulated"
    },
    "@schematics/angular:class": {
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "skipTests": true
    },
    "@schematics/angular:guard": {
      "skipTests": true
    },
    "@schematics/angular:interceptor": {
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "projects": {
    "app-synergy": {
      "projectType": "application",
      "root": "projects/app-synergy",
      "sourceRoot": "projects/app-synergy",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "baseHref": "/synergy/",
            "outputPath": "dist/synergy",
            "index": "projects/app-synergy/index.html",
            "main": "projects/app-synergy/main.ts",
            "polyfills": "projects/app-synergy/polyfills.ts",
            "tsConfig": "projects/app-synergy/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-synergy/service-worker.js",
              "projects/app-synergy/assets",
              { "glob": "**/*", "input": "node_modules/tinymce", "output": "/tinymce/" },
              { "glob": "dhtmlxgantt.css", "input": "node_modules/dhtmlx-gantt-enterprise/codebase", "output": "/assets/dhtmlx-gantt/" },
              { "glob": "jsoneditor-icons.svg", "input": "node_modules/jsoneditor/dist/img", "output": "/img/" },
              { "glob": "**/*", "input": "node_modules/@synergy/sys/public", "output": "/" },
              { "glob": "**/*", "input": "node_modules/@synergy/sys/META-INF", "output": "/META-INF/" },
              { "glob": "**/*", "input": "node_modules/@synergy/sys/WEB-INF", "output": "/WEB-INF/" },
              { "glob": "**/*", "input": "node_modules/@synergy/sys/assets", "output": "/assets/sys/" },
              { "glob": "**/*", "input": "node_modules/@synergy/dvz/assets", "output": "/assets/dvz/" }
            ],
            "styles": [
              "projects/app-synergy/pre-styles.scss",
              "node_modules/dhtmlx-gantt-enterprise/codebase/dhtmlxgantt.css",
              "projects/app-synergy/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules"
              ]
            },
            "scripts": [],
            "preserveSymlinks": true,
            "serviceWorker": true,
            "ngswConfigPath": "projects/app-synergy/ngsw-config.json"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/environment/environment.ts",
                  "with": "projects/environment/environment.prod.ts"
                }
              ],
              "optimization": true,
              "buildOptimizer": true,
              "outputHashing": "all",
              "sourceMap": {
                "vendor": false,
                "scripts": false,
                "styles": false,
                "hidden": false
              },
              "vendorChunk": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                { "type": "initial", "maximumWarning": "2mb", "maximumError": "10mb" },
                { "type": "anyComponentStyle", "maximumWarning": "6kb", "maximumError": "50kb" }
              ]
            },
            "development": {
              "vendorChunk": true,
              "extractLicenses": false,
              "buildOptimizer": false,
              "optimization": false,
              "namedChunks": true,
              "aot": true,
              "outputHashing": "none",
              "sourceMap": {
                "scripts": true,
                "styles": false,
                "vendor": false
              }
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "proxyConfig": "projects/environment/proxy.conf.ts"
          },
          "configurations": {
            "production": {
              "buildTarget": "app-synergy:build:production"
            },
            "development": {
              "buildTarget": "app-synergy:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/app-synergy/tsconfig.app.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/app-synergy/test.ts",
            "polyfills": "projects/app-synergy/polyfills.ts",
            "tsConfig": "projects/app-synergy/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/app-synergy/assets",
              "projects/app-synergy/manifest.json"
            ],
            "scripts": [],
            "styles": [
              "projects/app-synergy/pre-styles.scss",
              "node_modules/dhtmlx-gantt-enterprise/codebase/dhtmlxgantt.css",
              "projects/app-synergy/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules"
              ]
            }
          }
        }
      }
    }
  }
}
