<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PMD11 Custom Ruleset" xmlns="http://pmd.sf.net/ruleset/1.0.0"
    xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd" xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                        http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>Rules close resource</description>

    <rule ref="category/java/errorprone.xml/CloseResource">
        <priority>1</priority>
        <properties>
            <property name="types" value="java.sql.Connection,java.sql.Statement,java.sql.ResultSet,java.sql.PreparedStatement,java.util.stream.Stream,java.io.InputStream,java.io.OutputStream" />
        </properties>
    </rule>

</ruleset>
